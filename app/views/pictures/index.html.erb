<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table class="table table-striped table-hover text-center">
  <thead>
    <tr>
      <th class="text-center">ID</th>
      <th class="text-center">Thumb</th>
      <th class="text-center">Name</th>
      <th class="text-center">Dimensions</th>
      <th class="text-center">Project</th>
      <th colspan="2" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.id %></td>
        <td><%= link_to(image_tag(picture.image, :style => "height:50px"), picture.image.url, target: :_blank) %></td>
        <td><%= picture.image %></td>
        <td><%= picture.width %> x <%= picture.height %></td>
        <td>
          <% if picture.projects %>
            <% picture.projects.each do |project| %>
              <%= link_to project.name, edit_project_path(project), :class => "btn btn-warning" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', picture.image.url, target: :_blank, :class => "btn btn-info" %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

